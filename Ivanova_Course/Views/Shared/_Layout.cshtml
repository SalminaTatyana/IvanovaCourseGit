    <script>
        function Loader(b) {
            if (typeof b === "boolean") {
                if (b == true) $('.loader-wrapper').fadeIn(10);
                else $('.loader-wrapper').fadeOut(10);
            } else $('.loader-wrapper').fadeToggle(10);
        }
        window.onbeforeunload = function () {
            $('.loader-wrapper').fadeIn(10);
            setTimeout(function () {
                Loader(false);
            }, 105000); //hide loader
        };
        window.addEventListener("unload", function () {
            Loader(false);
        });
    </script>
